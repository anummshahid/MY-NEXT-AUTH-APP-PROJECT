{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Next.js: Debug Dev Server",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "serverReadyAction": {
          "pattern": "started server on .+, url: (https?://.+)",
          "uriFormat": "%s",
          "action": "openExternally"
        }
      },
      {
        "name": "Next.js: Debug Server-Side",
        "type": "node",
        "request": "attach",
        "port": 9229
      }
    ]
  }
  